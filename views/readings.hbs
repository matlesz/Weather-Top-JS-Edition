{{> menu}}

<form class="ui stacked segment form" action="/readings/{{station.id}}/updatereading/{{reading.id}}" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="0" type="text" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="Celsius" type="text" name="temperature" value="{{reading.temperature}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="km/hr" type="text" name="windSpeed" value="{{reading.windSpeed}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="hPa" type="text" name="pressure" value="{{reading.pressure}}">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Degrees" type="text" name="windDirection" value="{{reading.windDirection}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Reading</button>
</form>
